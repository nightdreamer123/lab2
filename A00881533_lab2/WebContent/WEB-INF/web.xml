<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <!-- The name & description -->
  <display-name> A00881533 - Lab 2</display-name> 
  <description>The content of Lab 2</description>

  <!-- The landing page -->	
  <welcome-file-list>
	<welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- The servlet name and the class -->
  <servlet> 
    <servlet-name> A00881533_main_lab2 </servlet-name> 
    <servlet-class> A00881533_mainServlet.A00881533_main_lab2 </servlet-class> 
  </servlet> 

  <!-- /showlab is the action on the form and A00881533_main_lab2 is linked to that-->
  <servlet-mapping> 
    <servlet-name> A00881533_main_lab2 </servlet-name> 
    <url-pattern> /showLab </url-pattern> 
  </servlet-mapping> 
  
</web-app>
